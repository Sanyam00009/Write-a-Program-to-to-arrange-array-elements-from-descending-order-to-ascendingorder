#include<stdio.h>
void main()
{
int a[100],n,i,temp;
printf("Enter the no. of array elements :::");
scanf("%d",&n);
printf("Enter the array elements :::");
for(i=0;i<n;i++)
  {
    scanf("%d",&a[i]);
  }
for(i=0;i<n;i++)
  {
    for(j=i+1;j<n;j++)
      {
        if(a[i]<a[j])
          {
          temp = a[i];
          a[i] = a[j];
          a[j] = temp;
          }
      }
  }
  for(i=0;i<n;i++)
  {
  printf("%d",a[i]);
  }
  return 0;
}
